@page "{id:int}"
@model SistemaChamados.Pages.Tickets.DetalhesModel
@using static SistemaChamados.Models.Enums
@{
    ViewData["Title"] = $"Chamado #{Model.Ticket?.Id}";
    var t = Model.Ticket;
    string TkId = t is null ? "" : $"ID: #{t.Id:000}";

    // Definir página de volta baseada no tipo de usuário
    string voltarPage = User.IsInRole("Usuario") ? "/Tickets/UsuarioTickets" : "/Tickets/Index";
    string voltarTexto = User.IsInRole("Usuario") ? "Voltar para Meus Chamados" : "Voltar para Chamados";

    string StatusClass(TicketStatus s) => s switch
    {
        TicketStatus.Aberto => "bg-primary",
        TicketStatus.Andamento => "bg-warning text-dark",
        TicketStatus.Resolvido => "bg-success",
        TicketStatus.Fechado => "bg-secondary",
        _ => "bg-primary"
    };
    string PriClass(PriorityLevel p) => p switch
    {
        PriorityLevel.Baixa => "bg-success",
        PriorityLevel.Média => "bg-warning text-dark",
        PriorityLevel.Alta => "bg-danger",
        PriorityLevel.Crítica => "bg-dark",
        _ => "bg-warning"
    };
}

<div class="container-fluid px-3 px-md-4">
    <!-- Mensagens de feedback -->
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Voltar - Redirecionamento condicional -->
    <div class="mb-3">
        <a asp-page="@voltarPage" class="btn btn-link p-0 text-decoration-none text-muted d-inline-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i> @voltarTexto
        </a>
    </div>

    @if (t is null)
    {
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="text-center py-5">
                    <div class="mb-3" style="font-size:3rem">📋</div>
                    <h2 class="text-muted mb-3">Chamado não encontrado</h2>
                    <a asp-page="@voltarPage" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Card principal do ticket -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <!-- Cabeçalho -->
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3 border-bottom pb-3 mb-4">
                    <div>
                        <div class="badge bg-light text-muted font-monospace mb-2">@TkId</div>
                        <h1 class="h3 fw-bold mb-0">@t.Titulo</h1>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="badge @StatusClass(t.Status) px-3 py-2">@t.Status</span>
                        <span class="badge @PriClass(t.Prioridade) px-3 py-2">@t.Prioridade</span>
                    </div>
                </div>

                <!-- Grid de informações -->
                <div class="row g-3 mb-4">
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card bg-light border-0">
                            <div class="card-body p-3">
                                <h6 class="card-subtitle mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    Solicitante
                                </h6>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                         style="width: 32px; height: 32px; font-size: 0.8rem; font-weight: 700;">
                                        @t.Solicitante?.Iniciais
                                    </div>
                                    <span class="fw-medium">@t.Solicitante?.Nome</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card bg-light border-0">
                            <div class="card-body p-3">
                                <h6 class="card-subtitle mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    Última Atualização
                                </h6>
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-clock me-2"></i>
                                    <span>@t.AtualizadoEm.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card bg-light border-0">
                            <div class="card-body p-3">
                                <h6 class="card-subtitle mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    Data de Abertura
                                </h6>
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-calendar me-2"></i>
                                    <span>@t.CriadoEm.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card bg-light border-0">
                            <div class="card-body p-3">
                                <h6 class="card-subtitle mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    Atualizado por
                                </h6>
                                @if (t.Responsavel is not null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                             style="width: 32px; height: 32px; font-size: 0.8rem; font-weight: 700;">
                                            @t.Responsavel.Iniciais
                                        </div>
                                        <span class="fw-medium">@t.Responsavel.Nome</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Sistema</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card bg-light border-0">
                            <div class="card-body p-3">
                                <h6 class="card-subtitle mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    Categoria
                                </h6>
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-tag me-2"></i>
                                    <span>@t.Categoria?.Nome</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Descrição -->
                <div class="border-top pt-4 mb-4">
                    <h5 class="fw-bold mb-3">Descrição</h5>
                    <div class="bg-light p-3 rounded border" style="line-height: 1.6;">
                        @t.Descricao
                    </div>
                </div>

                <!-- ANEXOS -->
                @if (Model.Anexos.Any())
                {
                    <div class="border-top pt-4 mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-paperclip me-2"></i>Anexos (@Model.Anexos.Count)
                        </h5>
                        <div class="row g-2">
                            @foreach (var anexo in Model.Anexos)
                            {
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="card border">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1 text-truncate">@anexo.NomeOriginal</h6>
                                                    <small class="text-muted">
                                                        @((anexo.TamanhoBytes / 1024.0 / 1024.0).ToString("F2")) MB
                                                    </small>
                                                </div>
                                                <a asp-page-handler="DownloadAnexo" asp-route-anexoId="@anexo.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- SEÇÃO DE COMENTÁRIOS -->
                <div class="border-top pt-4 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-chat-left-text me-2"></i>Respostas
                    </h5>

                    @if (Model.Comentarios.Any())
                    {
                        <div class="mb-4">
                            @foreach (var comentario in Model.Comentarios)
                            {
                                var isStatusChange = comentario.Tipo == TipoComentario.MudancaStatus;
                                var isInterno = !comentario.VisivelSolicitante && (User.IsInRole("Tecnico") || User.IsInRole("Admin"));

                                <div class="card comment-card mb-3 @(isStatusChange ? "comment-status" : null)">
                                    <!-- HEADER -->
                                    <div class="comment-header d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="comment-avatar me-2 @(isStatusChange ? "comment-avatar-status" : null)">
                                                @comentario.Usuario?.Iniciais
                                            </div>
                                            <div class="d-flex flex-column">
                                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                                    <strong>@comentario.Usuario?.Nome</strong>

                                                    @if (isStatusChange)
                                                    {
                                                        <span class="badge rounded-pill bg-primary-subtle text-primary-emphasis border border-primary-subtle">
                                                            Mudança de Status
                                                        </span>
                                                    }

                                                    @if (isInterno)
                                                    {
                                                        <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis border border-warning-subtle">
                                                            Interno
                                                        </span>
                                                    }
                                                </div>
                                                <small class="text-muted">@comentario.CriadoEm.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- BODY -->
                                    <div class="card-body">
                                        <p class="mb-0" style="white-space: pre-wrap;">@comentario.Comentario</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- FORMULÁRIO DE COMENTÁRIO -->
                @if (t.Status != TicketStatus.Fechado)
                {
                    <form method="post" asp-page-handler="AdicionarComentario" asp-route-id="@t.Id">
                        <div class="mb-3">
                            <label asp-for="ComentarioInput.Comentario" class="form-label fw-bold">
                                @if (User.IsInRole("Tecnico") || User.IsInRole("Admin"))
                                {
                                    <text>Adicionar Resposta:</text>
                                }
                                else
                                {
                                    <text>Adicionar Comentário:</text>
                                }
                            </label>
                            <textarea asp-for="ComentarioInput.Comentario"
                                      class="form-control bg-light border-0"
                                      rows="4"
                                      placeholder="Digite sua resposta..."
                                      style="resize:vertical"></textarea>
                            <span asp-validation-for="ComentarioInput.Comentario" class="text-danger"></span>
                        </div>

                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-reply me-1"></i>
                                @if (User.IsInRole("Tecnico") || User.IsInRole("Admin"))
                                {
                                    <text>Responder</text>
                                }
                                else
                                {
                                    <text>Enviar Comentário</text>
                                }
                            </button>

                            @if (User.IsInRole("Tecnico") || User.IsInRole("Admin"))
                            {
                                <button type="button" class="btn btn-outline-secondary"
                                        data-bs-toggle="modal" data-bs-target="#statusModal">
                                    <i class="bi bi-gear me-1"></i> Alterar Situação
                                </button>
                            }
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i>
                        <div>
                            <strong>Ticket Fechado</strong><br>
                            <small class="text-muted">Este chamado está fechado e não aceita mais comentários.</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Modal Bootstrap - apenas para Técnico/Admin -->
@if (User.IsInRole("Tecnico") || User.IsInRole("Admin"))
{
    <div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h6 class="modal-title fw-semibold" id="statusModalLabel">Alterar Status</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@Model.Ticket?.Id">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="Input.NovoStatus" class="form-label">Novo Status:</label>
                            <select asp-for="Input.NovoStatus" class="form-select">
                                <option value="@TicketStatus.Aberto">Aberto</option>
                                <option value="@TicketStatus.Andamento">Em Andamento</option>
                                <option value="@TicketStatus.Resolvido">Resolvido</option>
                                <option value="@TicketStatus.Fechado">Fechado</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary btn-sm">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
